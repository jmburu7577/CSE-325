@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "My Favorite Movies";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Favorite Movies</h1>
    <a asp-action="Create" class="btn btn-primary">+ Add New Movie</a>
</div>

<div class="card bg-dark border-secondary mb-4">
    <div class="card-body">
        <form asp-controller="Movies" asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label text-muted">Genre</label>
                <select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select">
                    <option value="">All Genres</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label text-muted">Title</label>
                <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by title..." />
            </div>
            <div class="col-md-3">
                <label class="form-label text-muted">Year (or newer)</label>
                <input type="number" asp-for="SearchYear" class="form-control" placeholder="YYYY" min="1900" max="2100" />
            </div>
            <div class="col-md-2">
                <input type="submit" value="Filter" class="btn btn-outline-light w-100" />
            </div>
        </form>
    </div>
</div>

<div class="row">
    @if (!Model.Movies!.Any())
    {
        <div class="col-12 text-center py-5">
            <h3 class="text-muted">No movies found.</h3>
        </div>
    }
    else
    {
        @foreach (var item in Model.Movies!) {
            <div class="col-md-4 mb-4">
                <div class="movie-card h-100">
                    <div class="movie-card-body d-flex flex-column h-100">
                        <div class="d-flex justify-content-between align-items-start">
                            <h5 class="movie-title text-truncate" title="@item.Title">@item.Title</h5>
                            <span class="movie-rating">@item.Rating</span>
                        </div>
                        <div class="movie-genre">@item.Genre</div>
                        
                        <div class="mt-auto">
                            <p class="card-text text-muted mb-2">
                                <small>Released: @item.ReleaseDate.ToString("MMM dd, yyyy")</small>
                            </p>
                            <div class="movie-meta">
                                <span class="movie-price">@item.Price.ToString("C")</span>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
